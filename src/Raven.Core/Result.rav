namespace System

import System.*

public union Result<T> {
    Ok(value: T)
    Error(message: string)
}

public union Result<T, E> {
    Ok(value: T)
    Error(data: E)
}

public extension ResultExtensions<T> for Result<T> {
    UnwrapOrDefault() -> T {
        if self is .Ok(value) {
            return value
        }

        return default(T)
    }

    UnwrapOrThrow() -> T {
