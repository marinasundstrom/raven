import System;

var total = 0;

while true {
    Console.Write("Write number: ");
    let inputStr = Console.ReadLine();
    
    var number = 0;
    if int.TryParse(inputStr, &number) {
        total = total + number;

        Console.Write("The total is: ");
        Console.WriteLine(total);

        if total >= 42 {
            Console.WriteLine("Yay!");
        }
    } else {
        Console.WriteLine("Not a number");
    }
}