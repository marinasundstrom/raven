/*
 * Demonstrates discriminated unions in Raven.
 */

import System.*

let unwrapped3 = IntHelpers.ParseNumber("23").UnwrapOrThrow()
Console.WriteLine(unwrapped3)

public class IntHelpers {
    public static ParseNumber(str: string) -> Result<int> {
        return try int.Parse(str) match {
            int v => .Ok(v)
            Exception exc => .Error(exc.Message)
        }
    }
}

union Result<T> {
    Ok(value: T)
    Error(message: string)
}

union Result<T, E> {
    Ok(value: T)
    Error(data: E)
}

extension ResultExtensions<T> for Result<T> {
    UnwrapOrDefault() -> T {
        if self is .Ok(value) {
            return value
        }
        return default(T)
    }

    UnwrapOrThrow() -> T {
        var error: string = ""
        if self is .Ok(value) {
            return value
        } else if self is .Error(error2) {
            error = error2
        }
        throw new System.InvalidOperationException("${error}")
    }
}