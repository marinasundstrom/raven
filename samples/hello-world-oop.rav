import System.*
import System.Console.*
import System.Threading.Tasks.*
import System.Threading.Tasks.Task.*

class Program {
    static Main() -> () {
        MainAsync().GetAwaiter().GetResult()
    }

    static async MainAsync() -> Task {
        WriteLine("Hello, World!")

        val f = Foo()
        WriteLine(f.Result)
        f.DoSomething(2)
        WriteLine(f.Result)

        val v = await f.Test(21);

        WriteLine(v.UnwrapOrThrow())

        val r = v match {
            .Ok(x) => "Value is: $x"
            .Error(msg) => "Error: $msg"
        }

        WriteLine(r)
    }
}

public class Foo(var defaultValue: int = 0) {
    public Result: int => defaultValue

    public DoSomething(no: int) -> () {
        defaultValue += no
    }

    public async Test(value: int) -> Task<Result<int>> {
        await Delay(5000)
        return .Ok(value * 2)
    }
}